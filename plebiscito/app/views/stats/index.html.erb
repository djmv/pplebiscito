<h1 >Así van las votaciones</h1>
<%@yes = 0%>
<%@no = 0%>
<% @stats.each do |stat| %>

	<% @yes = @yes + stat.vote_yes %>
	<% @no = @no + stat.vote_no %>
<% end %>
<h4><strong>Votos por el sí: </strong><%= 100*@yes/(@yes+@no) %>%</h4>
<h4><strong>Votos por el no: </strong><%= 100*@no/(@yes+@no) %>%</h4>
<!-- Esto es para obtener las ids de las mesas en las que se ha votado en @idm-->
<% @idm = Array.new %>
<% @idm[0] = 0 %> 
<% @a = 1 %>
<% @stats.each do |stat| %>
    <% @i=0 %>
	<% @idm.each do |id| %>
  		<% if id == stat.idmesa %>
    		<% @i=1 %>
    	<% end %>
   	<% end %>
   	<% if @i == 0 %>
    	<% @idm[@a] = stat.idmesa %>
    	<% @a = @a + 1 %>
    <% end %> 
<% end %>
<%@idm = @idm[1..@idm.length]%>
